# VCP Trader Configuration
# Copy this file to .env and fill in your credentials

# ===========================================
# 한국투자증권 KIS Developers API
# ===========================================
# 앱 키 (KIS Developers에서 발급)
KIS_APP_KEY=your_app_key_here
KIS_APP_SECRET=your_app_secret_here

# 계좌 정보
KIS_ACCOUNT_NUMBER=12345678-01
# 거래 환경: real (실거래) / paper (모의투자)
KIS_ENVIRONMENT=paper

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/vcp_trader
REDIS_URL=redis://localhost:6379/0

# ===========================================
# Telegram Notifications
# ===========================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# ===========================================
# Risk Management Settings
# ===========================================
# 거래당 최대 리스크 (자본의 %)
MAX_RISK_PER_TRADE=2.0
# 최대 동시 보유 포지션 수
MAX_POSITIONS=8
# 초기 손절 비율 (%)
INITIAL_STOP_LOSS=7.0

# ===========================================
# Pattern Detection Settings
# ===========================================
# 최소 RS Rating
MIN_RS_RATING=70
# VCP 패턴 최소 점수 (0-100)
MIN_VCP_SCORE=70

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
